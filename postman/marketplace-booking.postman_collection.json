{
  "info": {
    "name": "Marketplace Booking API",
    "_postman_id": "8f4df53f-9d70-4d38-91f4-9fd2874c8d6b",
    "description": "Postman collection for local Marketplace Booking API (Keycloak + tenant headers).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "if (!pm.collectionVariables.get('autoFetchToken') || pm.collectionVariables.get('autoFetchToken') === 'false') {",
          "  return;",
          "}",
          "",
          "const tokenUrl = `${pm.collectionVariables.get('keycloakBaseUrl')}/realms/${pm.collectionVariables.get('realm')}/protocol/openid-connect/token`;",
          "",
          "pm.sendRequest({",
          "  url: tokenUrl,",
          "  method: 'POST',",
          "  header: { 'Content-Type': 'application/x-www-form-urlencoded' },",
          "  body: {",
          "    mode: 'urlencoded',",
          "    urlencoded: [",
          "      { key: 'client_id', value: pm.collectionVariables.get('clientId') },",
          "      { key: 'grant_type', value: 'password' },",
          "      { key: 'username', value: pm.collectionVariables.get('username') },",
          "      { key: 'password', value: pm.collectionVariables.get('password') }",
          "    ]",
          "  }",
          "}, function (err, res) {",
          "  if (err || !res) {",
          "    console.error('Token fetch failed', err);",
          "    return;",
          "  }",
          "  const json = res.json();",
          "  if (json.access_token) {",
          "    pm.collectionVariables.set('accessToken', json.access_token);",
          "  } else {",
          "    console.error('No access_token in response', json);",
          "  }",
          "});"
        ]
      }
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "keycloakBaseUrl", "value": "http://localhost:8081" },
    { "key": "realm", "value": "appointments" },
    { "key": "clientId", "value": "web" },
    { "key": "username", "value": "owner@demo-salon.local" },
    { "key": "password", "value": "password" },
    { "key": "tenantId", "value": "11111111-1111-1111-1111-111111111111" },
    { "key": "accessToken", "value": "" },
    { "key": "resourceId", "value": "" },
    { "key": "bookingId", "value": "" },
    { "key": "autoFetchToken", "value": "true" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Get Access Token",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/x-www-form-urlencoded" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "client_id", "value": "{{clientId}}", "type": "text" },
                { "key": "grant_type", "value": "password", "type": "text" },
                { "key": "username", "value": "{{username}}", "type": "text" },
                { "key": "password", "value": "{{password}}", "type": "text" }
              ]
            },
            "url": "{{keycloakBaseUrl}}/realms/{{realm}}/protocol/openid-connect/token"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Token fetched', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "const json = pm.response.json();",
                  "if (json.access_token) {",
                  "  pm.collectionVariables.set('accessToken', json.access_token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/"
          }
        }
      ]
    },
    {
      "name": "Me",
      "item": [
        {
          "name": "GET /me/context",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{accessToken}}", "type": "string" }
              ]
            },
            "method": "GET",
            "header": [
              { "key": "X-Tenant-Id", "value": "{{tenantId}}" }
            ],
            "url": "{{baseUrl}}/me/context"
          }
        }
      ]
    },
    {
      "name": "Resources",
      "item": [
        {
          "name": "GET /resources",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{accessToken}}", "type": "string" }
              ]
            },
            "method": "GET",
            "header": [
              { "key": "X-Tenant-Id", "value": "{{tenantId}}" }
            ],
            "url": "{{baseUrl}}/resources"
          }
        },
        {
          "name": "POST /resources",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{accessToken}}", "type": "string" }
              ]
            },
            "method": "POST",
            "header": [
              { "key": "X-Tenant-Id", "value": "{{tenantId}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Chair A\",\n  \"timezone\": \"America/Denver\"\n}"
            },
            "url": "{{baseUrl}}/resources"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code >= 200 && pm.response.code < 300) {",
                  "  const json = pm.response.json();",
                  "  if (json.id) pm.collectionVariables.set('resourceId', json.id);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Bookings",
      "item": [
        {
          "name": "GET /bookings",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{accessToken}}", "type": "string" }
              ]
            },
            "method": "GET",
            "header": [
              { "key": "X-Tenant-Id", "value": "{{tenantId}}" }
            ],
            "url": "{{baseUrl}}/bookings"
          }
        },
        {
          "name": "POST /bookings/hold",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{accessToken}}", "type": "string" }
              ]
            },
            "method": "POST",
            "header": [
              { "key": "X-Tenant-Id", "value": "{{tenantId}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"resourceId\": \"{{resourceId}}\",\n  \"startUtc\": \"2026-02-10T18:00:00.000Z\",\n  \"endUtc\": \"2026-02-10T19:00:00.000Z\",\n  \"holdMinutes\": 5,\n  \"idempotencyKey\": \"hold-{{$timestamp}}\"\n}"
            },
            "url": "{{baseUrl}}/bookings/hold"
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "if (pm.response.code >= 200 && pm.response.code < 300) {",
                  "  const json = pm.response.json();",
                  "  if (json.id) pm.collectionVariables.set('bookingId', json.id);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "POST /bookings/:id/confirm",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{accessToken}}", "type": "string" }
              ]
            },
            "method": "POST",
            "header": [
              { "key": "X-Tenant-Id", "value": "{{tenantId}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"idempotencyKey\": \"confirm-{{$timestamp}}\"\n}"
            },
            "url": "{{baseUrl}}/bookings/{{bookingId}}/confirm"
          }
        },
        {
          "name": "POST /bookings/:id/cancel",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                { "key": "token", "value": "{{accessToken}}", "type": "string" }
              ]
            },
            "method": "POST",
            "header": [
              { "key": "X-Tenant-Id", "value": "{{tenantId}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"idempotencyKey\": \"cancel-{{$timestamp}}\"\n}"
            },
            "url": "{{baseUrl}}/bookings/{{bookingId}}/cancel"
          }
        }
      ]
    }
  ]
}
